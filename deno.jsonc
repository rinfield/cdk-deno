{
  "tasks": {
    "ci": "deno fmt --check && deno lint && deno test --import-map=importmap.json --allow-env --allow-read=__snapshots__,/tmp --allow-write=__snapshots__,/tmp",
    "cdk": "deno run --allow-all npm:aws-cdk --",
    "cdk-app": "deno run --allow-all --import-map=importmap.json app.ts"
  },
  "lint": {
    "files": {
      "exclude": ["cdk.out"]
    }
  },
  "fmt": {
    "files": {
      "exclude": ["cdk.out"]
    }
  }
}
